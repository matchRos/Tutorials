<launch>    
    
    <!-- start controller for manipulating and displaying joint states -->
    <rosparam file="$(find tutorial_ur)/config/joint_state_controller.yaml" command="load"/>
    <rosparam file="$(find tutorial_ur)/config/position_joint_controller.yaml" command="load"/>
    
    <node name="arm_controller_spawner" pkg="controller_manager" type="controller_manager" 
            args="spawn joint_state_controller position_joint_controller" respawn="false" output="screen"/>

    <node name="joint_position_control" type="rqt_joint_trajectory_controller" pkg="rqt_joint_trajectory_controller"/> 
      
</launch>